# ==========================================
# RAG Agent IA - Variables d'Environnement
# ==========================================
# Copiez ce fichier vers .env et remplissez les valeurs

# ===== OBLIGATOIRE =====

# Mistral AI
MISTRAL_API_KEY=your_mistral_api_key_here

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Encryption (pour BYOK - Bring Your Own Keys)
# Générer avec: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_encryption_key_here

# ===== AUTHENTIFICATION =====

# Google OAuth (pour le frontend NextAuth)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# NextAuth Secret (générer avec: openssl rand -base64 32)
AUTH_SECRET=your_nextauth_secret_here

# ===== OPTIONNEL =====

# Recherche Web (Perplexity)
PERPLEXITY_API_KEY=your_perplexity_api_key

# GitHub (pour ingestion de repos)
GITHUB_ACCESS_TOKEN=your_github_pat

# ===== REDIS (Rate Limiting) =====

# Format Redis Cloud: redis://default:PASSWORD@HOST:PORT
# Format local: redis://localhost:6379
REDIS_URL=redis://default:your_password@redis-12345.c1.eu-west-1-1.ec2.cloud.redislabs.com:12345

# ===== STRIPE (Monetization) =====

STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ===== APPLICATION =====

# Environnement: development | staging | production
APP_ENV=production

# Debug mode (désactiver en prod)
APP_DEBUG=false

# Niveau de log: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# ===== API =====

# Master Key pour création initiale de clés API
# Générer avec: openssl rand -hex 32
API_MASTER_KEY=your_master_key_here

# CORS (origines autorisées, séparées par virgule)
CORS_ORIGINS=https://your-frontend-domain.netlify.app,https://your-custom-domain.com

# URLs
NEXT_PUBLIC_API_URL=https://your-backend-domain.onrender.com/api/v1
FRONTEND_URL=https://your-frontend-domain.netlify.app

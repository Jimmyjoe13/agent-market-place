# ============================================
# RAG Agent IA - Environment Configuration
# ============================================
# Copiez ce fichier vers .env et configurez vos valeurs
# cp .env.example .env

# ============================================
# API Keys - Required
# ============================================

# Mistral AI API Key
# Obtenir sur: https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here

# Supabase Configuration
# Obtenir sur: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ============================================
# API Keys - Optional
# ============================================

# Perplexity API Key (pour la recherche web)
# Obtenir sur: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=

# GitHub Access Token (pour l'ingestion de repos)
# Obtenir sur: https://github.com/settings/tokens
GITHUB_ACCESS_TOKEN=

# OpenAI API Key (provider alternatif)
# Obtenir sur: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google Gemini API Key (provider alternatif)
# Obtenir sur: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# DeepSeek API Key (provider alternatif)
# Obtenir sur: https://platform.deepseek.com/
DEEPSEEK_API_KEY=

# ============================================
# Application Settings
# ============================================

# Environment: development, staging, production
APP_ENV=development

# Debug mode
APP_DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# Vector Store Settings
# ============================================

# Mistral embedding model
EMBEDDING_MODEL=mistral-embed

# Embedding dimension (Mistral = 1024)
EMBEDDING_DIMENSION=1024

# Similarity threshold for search (0.0 - 1.0)
SIMILARITY_THRESHOLD=0.7

# Max results per search
MAX_RESULTS=10

# ============================================
# LLM Settings
# ============================================

# Mistral model for generation
LLM_MODEL=mistral-large-latest

# Temperature (creativity): 0.0 - 2.0
LLM_TEMPERATURE=0.7

# Max output tokens
LLM_MAX_TOKENS=4096

# ============================================
# API Server Settings
# ============================================

# Host and port
API_HOST=0.0.0.0
API_PORT=8000

# Auto-reload in development
API_RELOAD=true

# ============================================
# API Authentication
# ============================================

# Require API key for protected endpoints
API_KEY_REQUIRED=true

# Master key for creating initial API keys
# Generate with: python -c "import secrets; print('master_' + secrets.token_hex(32))"
API_MASTER_KEY=master_your_secure_master_key_here

# Enable rate limiting per API key
RATE_LIMIT_ENABLED=true

# Default rate limit (requests per minute)
RATE_LIMIT_REQUESTS=100

# ============================================
# OAuth Settings (NextAuth.js)
# ============================================

# Google OAuth
# Configure sur: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Frontend URL (pour les redirections OAuth)
FRONTEND_URL=http://localhost:3000

# ============================================
# Stripe Settings (Monetization)
# ============================================

# Stripe API Keys
# Obtenir sur: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Stripe Webhook Secret
# Obtenir lors de la création du webhook: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# Redis Settings (Rate Limiting)
# ============================================

# Redis URL (optionnel - fallback vers in-memory si non configuré)
# Format: redis://[[username]:[password]@]host[:port][/db]
# Ex: redis://default:password@redis-cloud.com:12345
REDIS_URL=

# ============================================
# CORS Settings
# ============================================

# Origines autorisées (séparées par des virgules)
CORS_ORIGINS=http://localhost:3000,https://rag-agentia.netlify.app

# ============================================
# Monitoring & Observability
# ============================================

# Sentry DSN (pour le tracking d'erreurs en production)
# Obtenir sur: https://sentry.io/
SENTRY_DSN=

# Environment identifier for Sentry and Prometheus
# Values: development, staging, production
ENVIRONMENT=development

